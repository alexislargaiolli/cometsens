<!DOCTYPE html>
<html>
<body>
<%- include header.ejs %>
	<div class="container-fluid noPadding" style="background-color:#fff;">
		<div id="myCarousel" class="carousel slide" data-ride="carousel" style="position:fixed;z-index:0;width:100%;">
			<!-- Indicators -->
			<ol class="carousel-indicators">
				<li data-target="#myCarousel" data-slide-to="0" class="active"></li>
				<li data-target="#myCarousel" data-slide-to="1"></li>
			</ol>
			<div class="carousel-inner" style="height:500px;">
				<% for(var i = 0; i<items.length;++i){ %>
				<div class="item <% if(i==0){%>active<%}%>">
					<img src="<%= items[i].image %>" alt="First slide">
					<div class="carousel-caption"></div>
				</div>
				<% } %>
			</div>
			<a class="left carousel-control" href="#myCarousel" data-slide="prev"> <span class="glyphicon glyphicon-chevron-left"></span></a> <a class="right carousel-control" href="#myCarousel" data-slide="next"><span class="glyphicon glyphicon-chevron-right"></span></a>
		</div>
		<div style="margin-top:500px;background-color:#fff;z-index:100;position:relative;">
		<div class="red-block hidden-xs hidden-sm" style="height:400px;width:50%;position:absolute;">	

		</div>
		<div class="red-block visible-xs visible-sm" style="height:400px;width:100%;position:absolute;">	

		</div>
		<div class="red-block hidden-xs hidden-sm" style="height:400px;width:50%;position:absolute;left:50%;margin-top:400px;">	

		</div>
		
		<div class="container" style="height:800px;">
			<a href="/realisations">
				<div class="hidden-xs hidden-sm">
					<div class="col-md-4 home-block">
						<img class="always-visible" src="/img/plume01.png" style="float:left;" />
						<img class="always-visible" src="/img/play.png" style="float:left;position:relative;left:70%;top:-60%;" />
						<div style="margin-left:50%;">
							<h1 class="home-block-subtitle top-title always-visible">Réalisations</h1>	
						</div>
					</div>
					<div class="col-md-4 home-block middle-top-block">
						<img src="/img/papillon2.png" style="margin:10px 0 0 30%;" />
					</div>
					<div class="col-md-4 home-block">
						<img alt="" src="/img/qui-quoi-comment.jpg" />
						<img alt="" src="/img/web-com.png" style="margin:-200px 0 0 -50%;" />
					</div>

				</div>
			</a>

			<a href="/presentation">
				<div class="hidden-xs hidden-sm">
					<div class="col-md-4 home-block">
						<img src="/img/puzzle.png" class="always-visible" />
					</div>
					<div class="col-md-4 home-block middle-bot-block"></div>
					<div class="col-md-4 home-block">
						<div style="margin-left:-50%;">
							<h1 class="home-block-subtitle top-title always-visible">Présentation</h1>
						</div>
						<img alt="" src="/img/play.png" style="margin:80px 0 0 -20%;" />
					</div>
				</div>
			</a>

			<a href="/realisations">
				<div class="visible-xs visible-sm home-block">

					<div class="col-sm-3 hidden-xs">
						<img class="always-visible" src="/img/plume01.png" />
					</div>
					<div class="col-sm-7 col-xs-12">
						<h1 class="home-block-subtitle always-visible">Réalisations</h1>
						<img alt="" src="/img/play.png" style="margin:30px 0 0 20%;" class="always-visible" />
					</div>
					<div class="col-sm-2 hidden-xs">
						<img src="/img/papillon2.png" style="margin-top:20px;"/>
					</div>
				</div>
			</a>

			<a href="/presentation">
				<div class="visible-xs visible-sm home-block">
					<div class="col-sm-6 hidden-xs">
						<img src="/img/puzzle.png" style="width:100%;margin-top:40px;" />
					</div>
					<div class="col-sm-6 col-xs-12">
						<h1 class="home-block-title always-visible">Présentation</h1>
						<img alt="" src="/img/play.png" style="margin-left:20%;" />
					</div>

				</div>
			</a>
			</div>
		</div>
	</div>	
	<%- include footer.ejs %>
</body>	
</html>